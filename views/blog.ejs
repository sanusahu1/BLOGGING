<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
        <style>
            body {
                font-family: 'Arial', sans-serif;
                background-color: #f8f9fa;
                margin: 0;
            }

            .container {
                background-color: #ffffff;
                padding: 20px;
                margin: 20px auto;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                max-width: 800px;
                /* Adjust max-width based on your design */
            }

            h1 {
                color: #007bff;
            }

            img {
                max-width: 100%;
                height: auto;
                display: block;
                /* margin: 20px 0; */
                margin-left: 30px;
            }

            pre {
                white-space: pre-wrap;
                font-size: 16px;
                line-height: 1.5;
            }

            h4 {
                color: #1c5a0f;
            }

            form {
                margin-top: 20px;
            }

            input {
                width: calc(100% - 85px);
                margin-right: 10px;
            }

            .btn-primary {
                width: 80px;
            }

            /* Comments Section */
            .comment-container {
                margin-top: 20px;
            }

            .comment {
                margin-top: 15px;
                display: flex;
                align-items: flex-start;
            }

            .cmt_bubble {
                background-color: #007bff;
                padding: 10px;
                border-radius: 8px;
                color: #ffffff;
            }

            .cmt_content {
                margin: 0;
            }

            .comment pre {
                white-space: pre-wrap;
                font-size: 16px;
                line-height: 1.5;
            }

            .user-info {
                display: flex;
                align-items: center;
                margin-right: 10px;
                /* Adjust margin based on your design */
            }

            .user-info img {
                width: 50px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .user-info span {
                font-weight: bold;
            }

            .comment img {
                width: 30px;
                border-radius: 50%;
                margin-right: 10px;
            }

            /* Navigation Styles (Modify based on your nav structure) */
            nav {
                background-color: #343a40;
                padding: 10px;
                color: #ffffff;
            }

            nav a {
                color: #ffffff;
                text-decoration: none;
                margin-right: 15px;
            }

            nav a:hover {
                text-decoration: underline;
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.titel %>
            </h1>
            <img src="	http://localhost:8004/<%=blog.coverImageURL%>" width="700px" />
            <pre class="mt-3"><%= blog.body %></pre>
            <div class="comment">
                <div class="user-info">
                    <img src="<%= blog.createdBy.profilePicUrl %>" width="50px" />
                    <span>
                        <%= blog.createdBy.name %>
                    </span>
                </div>
            </div>
        </div>

        <div class="container mt-3">
            <h4>Comments (<%= comments.length %>)</h4>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
                        <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
                    </div>
                </form>

                <% } %>
                    <div class="mt-3">
                        <% comments.forEach(comment=> { %>
                            <div class="comment">
                                <div class="user-info">
                                    <img src="<%= comment.createdBy.profilePicUrl %>" width="20px" />
                                    <span>
                                        <%= comment.createdBy.name %>
                                    </span>
                                </div>
                                <div class="cmt_bubble">
                                    <div class="cmt_content">
                                        <pre><%= comment.content %></pre>
                                    </div>
                                </div>
                            </div>

                            <% }) %>
                    </div>
        </div>

        <%- include('./partials/script') %>
</body>

</html>